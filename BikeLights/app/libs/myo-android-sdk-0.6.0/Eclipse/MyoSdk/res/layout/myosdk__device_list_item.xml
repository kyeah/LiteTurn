<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@android:id/text1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Myo Alpha" />

    <TextView
        android:id="@android:id/text2"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text1"
        tools:text="A1:B2:C3:4D:5E:6F" />

    <TextView
        android:id="@+id/myosdk__firmware_incompatible_text"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/text2"
        android:visibility="gone"
        android:text="@string/myosdk__firmware_incompatible"
        android:textColor="@color/myosdk__button_red" />

    <ProgressBar
        android:id="@+id/myosdk__progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        style="@android:style/Widget.ProgressBar.Small.Inverse" />

    <View
        android:id="@+id/myosdk__connection_state_dot"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="@drawable/myosdk__connected_dot" />

</RelativeLayout>